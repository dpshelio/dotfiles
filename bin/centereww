#! /bin/bash

pidFile=/tmp/center-eww.pid
maxTime=$((SECONDS+10))
 read pid < "$pidFile"

if (( $pid > 0 ))
then                            # kill if clicked multiple times
    eww close-all
    echo -1 > "$pidFile"
else
    eww open-many blur_full weather profile quote search_full incognito-icon vpn-icon home_dir screenshot power_full reboot_full lock_full logout_full suspend_full &
    pid="$!"
    echo $pid > "$pidFile"


    # while [ $SECONDS -lt $maxTime ] ; do
    #     winid=$(wmctrl -lp | awk '$5 ~ /Network/ {print $1}')
    #     [[ -z "${winid}" ]] || break
    # done

    # # kill if loses focus
    # while [[ "$(xdotool getwindowfocus getwindowname)" == 'Network Connections' ]]; do
    #     :
    # done

    # kill -15 $pid
    # echo -1 > "$pidFile"

fi
